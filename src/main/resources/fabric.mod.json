{
	"schemaVersion": 1,
	"id": "shearapi",
	"version": "${version}",
	"name": "Shear API",
	"description": "Port NeoForge \"API\" to Fabric",
	"authors": [
		"PillowMC"
	],
	"contact": {
		"homepage": "https://github.com/PillowMC/ShearAPI",
		"sources": "https://github.com/PillowMC/ShearAPI"
	},
	"license": "LGPL-2.1",
	"icon": "assets/shearapi/icon.png",
